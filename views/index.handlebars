<h1>Burger List</h1>
<div class="row align-items-start">
    <div class="col">
        <ul class="devoured">
        {{#each burgers}}
        {{#if devoured}}
        <li> {{burger_name}} </li>
        {{/if}}
        {{/each}}
        </ul>
    </div>
    <div class="col">
        <form action="/api/burgers" method="POST">
            <textarea type="text" name="burger_name"></textarea>

            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="col">
        <ul class="notDevoured">
        
            {{#each burgers}}
            {{#unless devoured}}
            <li> {{burger_name}} <button data-id={{id}} class="devourbtn">Devour</button></li>
            {{/unless}}
            {{/each}}
            
        </ul>
    </div>
</div>
<script>
   $(".devourbtn").on("click",function(event){
       const id =$(this).data("id");

       $.ajax("/api/burgers/" + id,{
           type:"put"
       }).then(function(){
           location.reload();
       })

       
   })
    
</script>